<p id="notice"><%= notice %></p>

<h1>Listing Registrations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Team</th>
      <th>Shirt</th>
      <th>Redeemcode</th>
      <th>Option</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <td><%= registration.name %></td>
        <td><%= registration.lastname %></td>
        <td><%= registration.age %></td>
        <td><%= registration.gender %></td>
        <td><%= registration.email %></td>
        <td><%= registration.phone %></td>
        <td><%= registration.team %></td>
        <td><%= registration.shirt %></td>
        <td><%= registration.redeemcode %></td>
        <td><%= registration.option %></td>
        <td><%= link_to 'Show', registration %></td>
        <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
        <td><%= link_to 'Destroy', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

