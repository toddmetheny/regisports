<div class="container-fluid regular-container spacer-top-lg">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3 text-center">
			<h2>5K Color Run & Walk Puerto Rico</h2>
			<h2>Registration Starting Soon </h2>
		</div>
	</div>
</div>
<div class="container-fluid regular-container spacer-top-lg">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3 spacer-top-md">
			<p>We'll have the registration form for this <strong>event available soon</strong>. Leave us your information and we will contact you soon with the details</p>
			<p>Tendermos la <strong>forma de registracion disponible pronto</strong>, Dejemos su informacion y nos comunicaremos con detalles pronto</p>
		</div>
	</div>
<div class="row">
	<div class="col-sm-6 col-sm-offset-3">
		<div id="contact-added"><h2>Information Received - Thanks!</h2></div>
	</div>
</div>
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<%= form_for(@contact, remote: true) do |f| %>
			  <% if @contact.errors.any? %>
			    <div id="error_explanation">
			      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

			      <ul>
			      <% @contact.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>
			  <div class="form-group">
			    <%= f.label :name %><br>
			    <%= f.text_field :name, :class => "form-control" %>
			  </div>
			  <div class="form-group">
			    <%= f.label :email %><br>
			    <%= f.text_field :email, :class => "form-control" %>
			  </div>
			  <div class="form-group">
			    <%= f.label :phone %><br>
			    <%= f.text_field :phone, :class => "form-control" %>
			  </div>
			  <div class="form-group">
			    <%= f.label :event %><br>
			    <%= f.text_field :event, :class => "form-control" %>
			  </div>
			  <div class="form-group">
			    <%= f.label :comment %><br>
			    <%= f.text_area :comment, :class => "form-control" %>
			  </div>
			  <div class="actions">
			    <%= f.submit "submit", :class => "btn btn-primary" %>
			  </div>
			  <br>
			<% end %>
		</div>
	</div>

</div>

<% @events.each do |event| %>
	<% if event.active? %>
	<div class="container-fluid events-container">
		<div class="row">
			<div class="col-sm-12 eventInfo">
				<div class="panel">		
					<div class="panel-heading">
						<%= image_tag(event.image, class: 'img-responsive') %>
					</div>	
					<div class="panel-body clear-padding-top">
						<div class="row ">
							<div class="col-sm-8 col-sm-offset-2 ">
								<h3><%= event.title %></h3>
								<span class="sub-title"><strong>When: </strong>
								<%= event.date.strftime('%b %d, %y') %> | <%= event.startTime %>
								</span>
								<br>
								<span class="sub-title"><strong>Where: </strong>
								<%= event.city %>, <%= event.state %></span>
								<p><%=raw event.description %></p>
								<%= link_to 'Details', event_path(event), class: 'btn btn-primary btn-lg' %>									
							</div>
						</div>	<!-- row -->
					</div> <!-- end panel body -->
				</div> <!-- end panel -->
			</div>					
		</div>
	</div>
	<% end %>
<% end %>

<script>
  
  // New Reservation Ajax Sucess events

  $('#new_contact').bind('ajax:success', function(){
    this.reset(), // resets the registration form
    $("#contact-added").animate({  // animates In the registration confirmation 
        opacity: 1,
        marginLeft: "100px"
      }, {duration:800, easing:'easeOutCubic'}).delay(800);

    $("#contact-added").animate({ // animates Out the registration confirmation 
        marginLeft: "50px",
        opacity: 0
      });
    ;
  });
  
</script>