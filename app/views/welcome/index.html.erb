<div class="container-fluid homePageSlider">
<img class="img-responsive"src="https://s3.amazonaws.com/regisport/application/ekam-sports-running2100x965.jpg">
</div>

<% @events.each do |event| %>
<div class="container-fluid events-container">
	<div class="row">
		<div class="col-sm-12 eventInfo">
			<div class="panel">		
				<div class="panel-heading">
				<%= image_tag(event.image, class: 'img-responsive') %>
				</div>	
				<div class="panel-body">
					<span><h1><%= event.title %></h1></span>
					<span><h3><%= event.date.strftime('%b %d') %> | <%= event.city %> <%= event.state %></h3></span>
					<p><%=raw event.description %></p>
					
				</div>
				<div class="panel-footer"><%= link_to 'Details', event_path(event), class: 'btn btn-primary btn-lg' %></div>
			</div>
		</div>					
	</div>
</div>
<% end %>
<div class="container-fluid ekam-info-container">
	<div class="row">
		<div class="col-md-12">
			<span><h2>Simple Event Registration</h2></span>
			<p>No need for fluff. Just register and go.</p>
			<a class="btn btn-primary btn-lg" type="submit" href="#">Read More</a>
		</div>
	</div>

</div>

